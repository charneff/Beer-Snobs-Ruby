<h1>Create New Beer</h1>
  <%= form_for @beer do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %><br><br>
    </div>
    <div>
      <%= f.label :style %>
      <%= f.text_field :style %><br><br>
    </div>
    <div>
      <%= f.label :abv %>
      <%= f.text_field :abv %>%<br><br>
    </div>
    <div>
      <%= f.label :flavor_profile %><br>
      <%= f.text_area :flavor_profile %><br><br>
    </div>
    <div>
      <%= f.label :brewery_name %>
      <%= f.text_field :brewery_name %>
    </div>
    <div>
      <%= f.label :brewery_location %>
      <%= f.text_field :brewery_location %>
    </div>

    </div>

  <%= f.submit %>
  <% end %>
