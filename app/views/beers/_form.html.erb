<%= form_for @beer do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
  </div>
  <div>
    <%= f.label :style %>
    <%= f.text_field :style %><br><br>
  </div>
  <div>
    <%= f.label :abv %>
    <%= f.text_field :abv %>%<br><br>
  </div>
  <div>
    <%= f.label :flavor_profile %><br>
    <%= f.text_area :flavor_profile %><br><br>
  </div>

  <p> Select a Brewery: </p>
  <div>
    <%= f.collection_select :brewery_id, Brewery.all, :id, :name_and_location, include_blank: 'Create New Brewery' %>
  </div>


  <div>
    <p> Or Create One: </p>
    <%= f.fields_for :brewery do |b| %>
      <%= b.label :name %>
      <%= b.text_field :name %>
      <%= b.label :location %>
      <%= b.text_field :location %>
    <% end %>
  </div><br>

  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div><br>

<%= f.submit %>
<% end %>
